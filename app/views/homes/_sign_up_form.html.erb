<%= form_for User.new, url: api_v1_users_path, method: :post, html: { class: 'form-inline', 'ng-controller' => 'SignUpFormCtrl as signUpForm', 'ng-submit' => 'signUpForm.submit($event)' } do |f| %>
  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, placeholder: 'First name Last name', class: 'form-control', 'ng-model' => 'signUpForm.input.name' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>

    <%= f.email_field :email, placeholder: 'test@example.com', class: 'form-control', 'ng-model' => 'signUpForm.input.email' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>

    <%= f.password_field :password, placeholder: '8 or more characters', class: 'form-control', 'ng-model' => 'signUpForm.input.password' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
