<%= form_for User.new, url: api_v1_users_path, method: :post, class: 'form-inline' do |f| %>
  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, placeholder: 'First name Last name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>

    <%= f.email_field :email, placeholder: 'test@example.com', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>

    <%= f.password_field :password, placeholder: '8 or more characters', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
